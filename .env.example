# Environment Configuration
# Copy this file to .env and update the values for your environment

# Application
APP_NAME="Ask.Dentist"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8080

# Database
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=askdentist
DB_USERNAME=askdentist
DB_PASSWORD=password

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@askdentist.local"
MAIL_FROM_NAME="${APP_NAME}"

# Broadcasting (Soketi)
BROADCAST_DRIVER=pusher
PUSHER_APP_ID=askdentist
PUSHER_APP_KEY=askdentist-key
PUSHER_APP_SECRET=askdentist-secret
PUSHER_HOST=soketi
PUSHER_PORT=6001
PUSHER_SCHEME=http
PUSHER_APP_CLUSTER=mt1

# Queue
QUEUE_CONNECTION=redis

# Cache
CACHE_DRIVER=redis
SESSION_DRIVER=redis

# File Storage
FILESYSTEM_DISK=local

# Docker Environment
POSTGRES_DB=askdentist
POSTGRES_USER=askdentist
POSTGRES_PASSWORD=password
